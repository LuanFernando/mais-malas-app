<?xml version="1.0" encoding="utf-8"?>

<!-- Criando um fundo gradient para a splash screen do app-->
<shape
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:dither="true"
    android:layerType="software"
    android:shape="rectangle">
    <gradient
    android:type="linear"
    android:startColor="@android:color/white"
    android:centerY="0.9"
    android:endColor="@android:color/black"
    android:angle="270"/>
    <!-- Podemos usar varios angle para exibir gradient,
    cada angle irá exibir inicio e fim do gradient e angulos diferentes da tela.
    
    observação não coloque angle="240" pois irá dar Fatal Exception e reiniciar o mobile
    angle = "0"
    angle = "45"
    angle = "90"
    angle = "135"
    angle = "180"
    angle = "270"
    -->
    </shape>